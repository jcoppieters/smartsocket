

<!DOCTYPE html>
  <html>
    <head>
      <link type="text/css" rel="stylesheet" href="/files/min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <link rel="shortcut icon" href="/files/favicon.ico" type="image/x-icon" />

      <%- include('/views/style'); -%>
    </head>

    <body>
      <%- include('/views/nav'); -%>
      <form method="POST" action="/masters/new">
        <h1>
          Masters
          <button class="right btn waves-effect waves-light" type="submit" name="action" value="new">Add Master</button>
        </h1>     
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Address:port</th>
              <th>Nodes</th>
            </tr>
          </thead>
    
          <tbody>
          <% for (let master of masters) { if (master) { %>
            <tr>
              <td><a href="/masters/edit/<%= master.config.address %>:<%= master.config.port %>"><%= master.config.name %></a></td>
              <td><a href="/masters/edit/<%= master.config.address %>:<%= master.config.port %>"><%= master.config.address %></a></td>
              <td><a href="/masters/edit/<%= master.config.address %>:<%= master.config.port %>"><%= master.nodes.length %></a></td>
            </tr>
          <% }} %>
          </tbody>
        </table>
      </form> 

      <%- include('/views/footer'); -%>
    </body>
    <%- include('/views/scripts'); -%>
  </html>