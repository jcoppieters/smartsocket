{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "**/*", ".vscode/platform.ts"
  ],
  "exclude": [
    "www/**/*"
  ]
}